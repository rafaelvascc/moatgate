@page
@model MoatGate.Pages.Client.IndexModel
@{
    ViewData["Title"] = "Clients";
}
<h2>Clients</h2>
<p>
    <a asp-page="Create" class="btn btn-primary"><i class="fa fa-plus"></i> Create New</a>
</p>
<table class="table table-condensed table-responsive table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Clients[0].ClientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clients[0].ClientId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clients[0].ClientUri)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clients[0].Enabled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clients[0].Description)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Clients)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientUri)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Enabled)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <div class="btn-group btn-group-sm">
                        <a asp-page="./CreateEdit" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Edit"><i class="fa fa-pencil"></i></a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete"><i class="fa fa-trash-o"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
