@page
@model MoatGate.Pages.Client.ListModel
@{
    ViewData["Title"] = "Clients";
}
@section Styles {
    <environment include="Development">
        <link rel="stylesheet" type="text/css" href="~/lib/datatables/datatables.css" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" type="text/css" href="~/lib/datatables/datatables.min.css" asp-append-version="true" />
    </environment>
}
<div class="col-lg-12">
    <div class="col-lg-6">
        <h2>@ViewData["Title"]</h2>
    </div>
    <div class="col-lg-6">
        <div class="btn-group btn-group pull-right pull-right btnsListActions">
            <a asp-page="CreateEdit" class="btn btn-primary"><i class="fas fa-plus"></i> Create New</a>
            <button class="btn btn-success" data-toggle="collapse" href="#clientSearchForm" aria-expanded="false" aria-controls="clientSearchForm"><i class="fas fa-filter"></i> Toggle Filters</button>
        </div>
    </div>
</div>
<div class="col-lg-12 container-fluid collapse" id="clientSearchForm">
    <form class="form-horizontal">
        <div class="col-lg-6">
            <div class="form-group">
                <label class="control-label col-sm-4">Client Name</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="txtClientName" placeholder="Client Name">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4">Client Id</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="txtClientId" placeholder="Client Id">
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label class="control-label col-sm-4">Description</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="txtDescription" placeholder="Description">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4">Enabled</label>
                <div class="col-sm-8">
                    <select class="form-control" id="ddlEnabled" placeholder="Enabled">
                        <!option value=""></!option>
                        <!option value="true">Yes</!option>
                        <!option value="false">No</!option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <button type="button" id="btnSearch" class="btn btn-primary pull-right"><i class="fas fa-search"></i> Search</button>
        </div>
    </form>
</div>
<table class="table table-condensed table-responsive table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>
            </th>
            <th>
            </th>
            <th>
            </th>
            <th>
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
<script id="client-actions-template" type="text/x-jsrender">
    <div class="btn-group btn-group-sm pull-right clientActionBtns">
        <a href="./CreateEdit/{{:id}}" class="btn btn-sm btn-primary" title="Edit Client"><i class="fas fa-edit"></i></a>
        <button type="button" data-id="{{:id}}" data-url="../internal-api/clients/delete" class="btn btn-sm btn-danger" title="Delete" data-toggle="modal" data-target="#deleteModal"><i class="fas fa-trash"></i></button>
    </div>
</script>
@section Scripts {
    <environment include="Development">
        <script type="text/javascript" src="~/lib/datatables/datatables.js" asp-append-version="true"></script>
        <script type="text/javascript" src="~/js/Clients/list.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script type="text/javascript" src="~/lib/datatables/datatables.min.js" asp-append-version="true"></script>
        <script type="text/javascript" src="~/js/Clients/list.min.js" asp-append-version="true"></script>
    </environment>
}
