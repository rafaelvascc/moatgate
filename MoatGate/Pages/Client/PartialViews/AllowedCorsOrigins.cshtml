@model IList<IdentityServer4.EntityFramework.Entities.ClientCorsOrigin>
<section data-scope="client-partials-cors-origins">
    <table class="table table-condensed table-responsive table-striped table-hover" id="tbl-cors-origins">
        <thead>
            <tr>
                <th>Origin</th>
                <th>
                    <button type="button" class="btn btn-sm btn-primary pull-right" id="btn-add-cors-origins" title="Add CORS Origin"><i class="fas fa-plus"></i></button>
                </th>
            </tr>
        </thead>
        <tbody>
            @{ int i = 0; }
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    <input type="hidden" class="form-control" name="Client.AllowedCorsOrigins[@i.ToString()].Id" value="@item.Id" />
                    <input type="text" class="form-control" name="Client.AllowedCorsOrigins[@i.ToString()].Origin" value="@item.Origin" />
                </td>
                <td>
                    <div class="btn-group btn-group-sm pull-right">
                        <button type="button" class="btn btn-sm btn-danger  btn-delete-cors-origins" title="Delete"><i class="fas fa-trash-alt"></i></button>
                    </div>
                </td>
            </tr>
                i++;
            }
        </tbody>
    </table>
    <script id="cors-origins-template" type="text/x-jsrender">
        <tr>
            <td>
                <input type="hidden" class="form-control" name="Client.AllowedCorsOrigins[{{:index}}].Id" value="{{:id}}" />
                <input type="text" class="form-control" name="Client.AllowedCorsOrigins[{{:index}}].Origin" value="{{:origin}}" />
            </td>
            <td>
                <div class="btn-group btn-group-sm pull-right">
                    <button type="button" class="btn btn-sm btn-danger btn-delete-cors-origins" title="Delete"><i class="fas fa-trash-alt"></i></button>
                </div>
            </td>
        </tr>
    </script>
</section>