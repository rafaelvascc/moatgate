@model IList<IdentityServer4.EntityFramework.Entities.ClientScope>
<section data-scope="client-partials-allowed-scopes">
    <table class="table table-condensed table-responsive table-striped table-hover  table-bordered" id="tbl-allowed-scope">
        <thead>
            <tr>
                <th>Scope</th>
                <th class="column-control-1">
                    <button type="button" class="btn btn-sm btn-primary pull-right" id="btn-add-allowed-scope" title="Add New Allowed Scope"><i class="fas fa-plus"></i></button>
                </th>
            </tr>
        </thead>
        <tbody>
            @{ int i = 0; }
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="hidden" class="form-control" name="Client.AllowedScopes[@i.ToString()].Id" value="@item.Id" />
                        <input type="text" class="form-control" name="Client.AllowedScopes[@i.ToString()].Scope" value="@item.Scope" />
                    </td>
                    <td>
                        <div class="btn-group btn-group-sm pull-right">
                            <button type="button" class="btn btn-sm btn-danger  btn-delete-allowed-scope" title="Delete"><i class="fas fa-trash-alt"></i></button>
                        </div>
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>
    <script id="allowed-scope-template" type="text/x-jsrender">
        <tr>
            <td>
                <input type="hidden" class="form-control" name="Client.AllowedScopes[{{:index}}].Id" value="{{:id}}" />
                <input type="text" class="form-control" name="Client.AllowedScopes[{{:index}}].Scope" value="{{:value}}" />
            </td>
            <td>
                <div class="btn-group btn-group-sm pull-right">
                    <button type="button" class="btn btn-sm btn-danger btn-delete-allowed-scope" title="Delete"><i class="fas fa-trash-alt"></i></button>
                </div>
            </td>
        </tr>
    </script>
</section>