@model IList<IdentityServer4.EntityFramework.Entities.ClientIdPRestriction>
<section data-scope="client-partials-idp-restrictions">
    <table class="table table-condensed table-responsive table-striped table-hover  table-bordered" id="tbl-idp-restriction">
        <thead>
            <tr>
                <th>
                    Provider
                </th>
                <th class="column-control-1">
                    <button type="button" class="btn btn-sm btn-primary pull-right" id="btn-add-idp-restriction" title="Add Identity Provider Restriction"><i class="fas fa-plus"></i></button>
                </th>
            </tr>
        </thead>
        <tbody>
            @{ int i = 0; }
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    <input type="hidden" class="form-control" name="Client.IdentityProviderRestrictions[@i.ToString()].ClientId" value="@item.ClientId" />
                    <input type="hidden" class="form-control" name="Client.IdentityProviderRestrictions[@i.ToString()].Id" value="@item.Id" />
                    <input type="text" class="form-control" name="Client.IdentityProviderRestrictions[@i.ToString()].Provider" value="@item.Provider" />
                </td>
                <td>
                    <div class="btn-group btn-group-sm pull-right">
                        <button type="button" class="btn btn-sm btn-danger  btn-delete-idp-restriction" title="Delete"><i class="fas fa-trash-alt"></i></button>
                    </div>
                </td>
            </tr>
                i++;
            }
        </tbody>
    </table>
    <script id="idp-restriction-template" type="text/x-jsrender">
        <tr>
            <td>
                <input type="hidden" class="form-control" name="Client.IdentityProviderRestrictions[{{:index}}].Id" value="{{:id}}" />
                <input type="text" class="form-control" name="Client.IdentityProviderRestrictions[{{:index}}].Provider" value="{{:value}}" />
            </td>
            <td>
                <div class="btn-group btn-group-sm pull-right">
                    <button type="button" class="btn btn-sm btn-danger btn-delete-idp-restriction" title="Delete"><i class="fas fa-trash-alt"></i></button>
                </div>
            </td>
        </tr>
    </script>
</section>