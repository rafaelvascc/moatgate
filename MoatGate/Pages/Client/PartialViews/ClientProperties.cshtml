@model IList<IdentityServer4.EntityFramework.Entities.ClientProperty>
<section data-scope="client-partials-client-property">
    <table class="table table-condensed table-responsive table-striped table-hover table-bordered" id="tbl-client-property">
        <thead>
            <tr>
                <th>Key</th>
                <th>Value</th>
                <th class="column-control-1">
                    <button type="button" class="btn btn-sm btn-primary pull-right" id="btn-add-client-property" title="Add Client Property"><i class="fas fa-plus"></i></button>
                </th>
            </tr>
        </thead>
        <tbody>
            @{ int i = 0; }
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="hidden" class="form-control" name="Client.Properties[@i.ToString()].ClientId" value="@item.ClientId" />
                        <input type="hidden" class="form-control" name="Client.Properties[@i.ToString()].Id" value="@item.Id" />
                        <input type="text" class="form-control" name="Client.Properties[@i.ToString()].Key" value="@item.Key" />
                    </td>
                    <td>
                        <input type="text" class="form-control" name="Client.Properties[@i.ToString()].Value" value="@item.Value" />
                    </td>
                    <td>
                        <div class="btn-group btn-group-sm pull-right">
                            <button type="button" class="btn btn-sm btn-danger  btn-delete-client-property" title="Delete"><i class="fas fa-trash-alt"></i></button>
                        </div>
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>
    <script id="client-property-template" type="text/x-jsrender">
        <tr>
            <td>
                <input type="hidden" class="form-control" name="Client.Properties[{{:index}}].Key" value="{{:id}}" />
                <input type="text" class="form-control" name="Client.Properties[{{:index}}].Key" value="{{:key}}" />
            </td>
            <td>
                <input type="text" class="form-control" name="Client.Properties[{{:index}}].Value" value="{{:value}}" />
            </td>
            <td>
                <div class="btn-group btn-group-sm pull-right">
                    <button type="button" class="btn btn-sm btn-danger btn-delete-client-property" title="Delete"><i class="fas fa-trash-alt"></i></button>
                </div>
            </td>
        </tr>
    </script>
</section>
