@model IList<IdentityServer4.EntityFramework.Entities.ClientPostLogoutRedirectUri>
<section data-scope="client-partials-logout-redirect-uri">
    <table class="table table-condensed table-responsive table-striped table-hover table-bordered" id="tbl-logout-redirect-uri">
        <thead>
            <tr>
                <th>
                    Post Logout Redirect Uri
                </th>
                <th class="column-control-1">
                    <button type="button" class="btn btn-sm btn-primary pull-right" id="btn-add-logout-redirect-uri" title="Add Post Logout Redirect Uri"><i class="fas fa-plus"></i></button>
                </th>
            </tr>
        </thead>
        <tbody>
            @{ int i = 0; }
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="hidden" class="form-control" name="Client.PostLogoutRedirectUris[@i.ToString()].ClientId" value="@item.ClientId" />
                        <input type="hidden" class="form-control" name="Client.PostLogoutRedirectUris[@i.ToString()].Id" value="@item.Id" />
                        <input type="url" class="form-control" placeholder="/signout-callback-oidc" name="Client.PostLogoutRedirectUris[@i.ToString()].PostLogoutRedirectUri" value="@item.PostLogoutRedirectUri" />
                    </td>
                    <td>
                        <div class="btn-group btn-group-sm pull-right">
                            <button type="button" class="btn btn-sm btn-danger  btn-delete-logout-redirect-uri" title="Delete"><i class="fas fa-trash-alt"></i></button>
                        </div>
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>
    <script id="logout-redirect-uri-template" type="text/x-jsrender">
        <tr>
            <td>
                <input type="hidden" class="form-control" name="Client.PostLogoutRedirectUris[{{:index}}].Id" value="{{:id}}" />
                <input type="url" placeholder="/signout-callback-oidc" class="form-control" name="Client.PostLogoutRedirectUris[{{:index}}].PostLogoutRedirectUri" value="https://somedomain.com/signout-callback-oidc" />
            </td>
            <td>
                <div class="btn-group btn-group-sm pull-right">
                    <button type="button" class="btn btn-sm btn-danger btn-delete-logout-redirect-uri" title="Delete"><i class="fas fa-trash-alt"></i></button>
                </div>
            </td>
        </tr>
    </script>
</section>