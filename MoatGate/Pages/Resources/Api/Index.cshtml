@page "{id:int?}"
@model MoatGate.Pages.Resources.Api.IndexModel
@{
    ViewData["Title"] = "Api Resources";
}
<h2>@ViewData["Title"]</h2>
<p>
    <a asp-page="CreateEdit" class="btn btn-primary"><i class="fas fa-plus"></i> Create New</a>
</p>
<table class="table table-condensed table-responsive table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApiResources[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApiResources[0].DisplayName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApiResources[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApiResources[0].Enabled)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ApiResources)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Enabled)
                </td>
                <td>
                    <div class="btn-group btn-group-sm pull-right">
                        <a asp-page="./CreateEdit" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Edit"><i class="fas fa-edit"></i></a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete"><i class="fas fa-trash"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
