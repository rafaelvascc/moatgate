@page
@model MoatGate.Pages.Resources.Identity.ListModel
@{
    ViewData["Title"] = "Identity Resources";
}
<h2>@ViewData["Title"]</h2>
<p>
    <a asp-page="CreateEdit" class="btn btn-primary"><i class="fas fa-plus"></i> Create New</a>
</p>
<table class="table table-condensed table-responsive table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdentityResources[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdentityResources[0].DisplayName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdentityResources[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdentityResources[0].Enabled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdentityResources[0].Required)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdentityResources[0].ShowInDiscoveryDocument)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.IdentityResources)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Enabled)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Required)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShowInDiscoveryDocument)
                </td>
                <td>
                    <div class="btn-group btn-group-sm pull-right">
                        <a asp-page="./CreateEdit" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Edit"><i class="fas fa-edit"></i></a>
                        <button type="button" class="btn btn-sm btn-danger deletePopOver"><i class="fas fa-trash"></i></button>
                    </div>
                    <div class="confirmDeletePopover">
                        <form method="post">
                            <div class="btn-group btn-group-sm pull-right confirmDeletePopoverBtnGroup">
                                <button type="submit" asp-page-handler="delete" asp-route-id="@item.Id" class="btn btn-sm btn-success" title="Delete"><i class="fas fa-check"></i> Confirm</button>
                                <button type="button" class="btn btn-sm btn-danger btnCancelDelete"><i class="fas fa-times"></i> Cancel</button>
                            </div>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script type="text/javascript" src="~/js/Resources/Identity/list.js" asp-append-version="true"></script>
}
