@page "{id:int?}"
@model MoatGate.Pages.Roles.CreateModel

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="MoatGateIdentityRole.Id" type="hidden" />
            <input asp-for="MoatGateIdentityRole.ConcurrencyStamp" type="hidden" />
            <div class="form-group">
                <label asp-for="MoatGateIdentityRole.Name" class="control-label"></label>
                <input asp-for="MoatGateIdentityRole.Name" class="form-control" />
                <span asp-validation-for="MoatGateIdentityRole.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Save <i class="fas fa-save" aria-hidden="true"></i></button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
