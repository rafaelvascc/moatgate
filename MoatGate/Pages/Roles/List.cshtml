@page
@model MoatGate.Pages.Roles.ListModel
@{
    ViewData["Title"] = "Roles";
}
@section Styles {
    <link rel="stylesheet" type="text/css" href="~/lib/datatables/datatables.min.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/css/role.css" asp-append-version="true" />
}
<div class="col-lg-12">
    <div class="col-lg-6">
        <h2>@ViewData["Title"]</h2>
    </div>
    <div class="col-lg-6">
        <div class="btn-group btn-group pull-right pull-right btnsListActions">
            <a asp-page="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Create New</a>
        </div>
    </div>
</div>
<table class="table table-condensed table-responsive table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
<script id="role-actions-template" type="text/x-jsrender">
    <div class="btn-group btn-group-sm pull-right clientActionBtns">
        <button type="button" data-id="{{:id}}" data-url="../api/internal/roles/delete" class="btn btn-sm btn-danger" title="Delete" data-toggle="modal" data-target="#deleteModal"><i class="fas fa-trash"></i></button>
    </div>
</script>
@section Scripts {
    <script type="text/javascript" src="~/lib/datatables/datatables.min.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/js/Roles/list.js" asp-append-version="true"></script>
}
